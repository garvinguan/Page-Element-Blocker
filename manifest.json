{
  "manifest_version": 2,

  "name": "Getting started example",
  "description": "This extension removes DOM elements",
  "version": "1.0",

    "content_scripts": [
	{
	    "matches": ["<all_urls>"],
	    "js": ["content_scripts/code.js"],
	    "options_page": "options.html",
	    "run_at": "document_end"
	}
    ],

  "browser_action": {
    "default_icon": "icon.png",
      "default_popup": "popup.html",
      "default_title": "Garvin Click here!"
  },
  "permissions": [
      "tabs",
      "storage",
      "<all_urls>"
  ]
}
