{
    "manifest_version": 2,

    "name": "Garblock",
    "description": "This extension removes unwanted DOM elements",
    "version": "1.0",
    "options_page": "pages/options.html",
    "content_scripts": [
	{
	    "matches": ["<all_urls>"],
	    "js": ["content_scripts/url.min.js","content_scripts/code.js"],
	    "run_at": "document_start"
	}
    ],

    "browser_action": {
	"default_icon": "images/icon.png",
	"default_popup": "pages/popup.html",
	"default_title": "Garvin Click here!"
    },
    "permissions": [
	"tabs",
	"storage",
	"<all_urls>"
    ]
}
